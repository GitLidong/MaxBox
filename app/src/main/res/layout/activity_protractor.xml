<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.lidong.maxbox.activity.ProtractorActivity">

    <SurfaceView
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/protractor_camerapreview"
        android:layout_gravity="center" />

    <ImageView
        android:id="@+id/Tool_imageView"
        android:layout_width="230dp"
        android:layout_height="wrap_content"
        android:src="@drawable/tool_protractor_bg1"
        android:layout_gravity="right"/>

    <com.lidong.maxbox.views.ProtractorView
        android:id="@+id/protractor_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/preview_button"
        android:layout_gravity="bottom"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="20dp"
        android:background="@drawable/tool_protractor_viewmode_selector" />


</FrameLayout>
