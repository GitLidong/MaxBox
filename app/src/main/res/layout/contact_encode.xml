<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/qr_code_header_bar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_actionbar_height"
        android:background="@drawable/shape_corner_up"
        android:orientation="horizontal">
        <Button
            android:id="@+id/delete"
            android:layout_width="@dimen/common_actionbar_back_width"
            android:layout_height="@dimen/common_actionbar_back_height"
            android:layout_marginTop="@dimen/common_actionbar_btn_margintop"
            android:layout_marginLeft="@dimen/common_actionbar_btn_marginleft"
            android:background="@drawable/input_no_style"/>
        <TextView
            android:id="@+id/textoftype"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/typeOfContact"
            android:textColor="@color/compass_actionbar_title_text_color"
            android:textSize="@dimen/common_actionbar_title_text_size" />
        <Button
            android:id="@+id/add"
            android:layout_width="@dimen/common_actionbar_back_width"
            android:layout_height="@dimen/common_actionbar_back_height"
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/common_actionbar_btn_margintop"
            android:layout_marginRight="@dimen/common_actionbar_btn_marginleft"
            android:background="@drawable/input_yes_style"/>
    </RelativeLayout>

    <ScrollView
        android:layout_below="@id/qr_code_header_bar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorWhite">

        <RelativeLayout
            android:id="@+id/contact"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/qr_code_header_bar"
            android:background="@color/colorWhite">
            <TextView
                android:id="@+id/text_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="10sp"
                android:text="@string/contactName"
                android:textColor="@color/black"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="35dp"/>
            <EditText
                android:id="@+id/edit_name"
                android:layout_toRightOf="@id/text_name"
                android:layout_width="240dp"
                android:layout_height="32dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="30dp"
                android:textSize="12sp"
                android:textColor="#CFCFCF"
                android:textColorHint="#CFCFCF"
                android:maxLength="10"
                android:background="@drawable/input_background"
                android:textCursorDrawable="@null"
                android:cursorVisible="true"
                android:hint="@string/inputContactNameHint" />

            <LinearLayout
                android:layout_below="@id/edit_name"
                android:orientation="horizontal"
                android:id="@+id/line1"
                android:layout_width="330dp"
                android:layout_height="1dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="16dp"
                android:background="#F0F0F0">
            </LinearLayout>
            <RelativeLayout
                android:id="@+id/company"
                android:layout_below="@id/line1"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/text_company"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="10sp"
                    android:text="@string/contactCompany"
                    android:textColor="@color/black"
                    android:layout_marginTop="12dp"
                    android:layout_marginLeft="35dp"/>
                <EditText
                    android:id="@+id/edit_company"
                    android:layout_width="200dp"
                    android:layout_height="32dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="20dp"
                    android:textSize="12sp"
                    android:textColor="#CFCFCF"
                    android:textColorHint="#CFCFCF"
                    android:maxLength="20"
                    android:background="@drawable/input_background"
                    android:textCursorDrawable="@null"
                    android:cursorVisible="true"
                    android:hint="@string/inputContactOrgHint"
                    android:layout_toRightOf="@id/text_company"/>
                <LinearLayout
                    android:layout_below="@id/edit_company"
                    android:orientation="horizontal"
                    android:id="@+id/line2"
                    android:layout_width="330dp"
                    android:layout_height="1dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="16dp"
                    android:background="#F0F0F0">
                </LinearLayout>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/phone"
                android:layout_below="@id/company"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/text_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="10sp"
                    android:text="@string/contactPhone"
                    android:textColor="@color/black"
                    android:layout_marginTop="12dp"
                    android:layout_marginLeft="35dp"/>
                <EditText
                    android:id="@+id/edit_phone1"
                    android:layout_width="200dp"
                    android:layout_height="32dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="20dp"
                    android:textSize="12sp"
                    android:phoneNumber="true"
                    android:textColor="#CFCFCF"
                    android:textColorHint="#CFCFCF"
                    android:maxLength="18"
                    android:background="@drawable/input_background"
                    android:textCursorDrawable="@null"
                    android:cursorVisible="true"
                    android:hint="@string/inputContactNumHint"
                    android:layout_toRightOf="@id/text_phone"/>
                <EditText
                    android:id="@+id/edit_phone2"
                    android:layout_width="200dp"
                    android:layout_height="32dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="20dp"
                    android:textSize="12sp"
                    android:phoneNumber="true"
                    android:textColor="#CFCFCF"
                    android:textColorHint="#CFCFCF"
                    android:maxLength="18"
                    android:background="@drawable/input_background"
                    android:textCursorDrawable="@null"
                    android:cursorVisible="true"
                    android:hint="@string/inputContactNumHint"
                    android:layout_below="@id/edit_phone1"
                    android:layout_alignRight="@id/edit_phone1"/>
                <EditText
                    android:id="@+id/edit_phone3"
                    android:layout_width="200dp"
                    android:layout_height="32dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="20dp"
                    android:textSize="12sp"
                    android:phoneNumber="true"
                    android:textColor="#CFCFCF"
                    android:textColorHint="#CFCFCF"
                    android:maxLength="18"
                    android:background="@drawable/input_background"
                    android:textCursorDrawable="@null"
                    android:cursorVisible="true"
                    android:hint="@string/inputContactNumHint"
                    android:layout_below="@id/edit_phone2"
                    android:layout_alignRight="@id/edit_phone1"/>
                <LinearLayout
                    android:layout_below="@id/edit_phone3"
                    android:orientation="horizontal"
                    android:id="@+id/line3"
                    android:layout_width="330dp"
                    android:layout_height="1dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="16dp"
                    android:background="#F0F0F0">
                </LinearLayout>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/email"
                android:layout_below="@id/phone"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/text_email"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="10sp"
                    android:text="@string/contactEmail"
                    android:textColor="@color/black"
                    android:layout_marginTop="12dp"
                    android:layout_marginLeft="35dp"/>
                <EditText
                    android:id="@+id/edit_email1"
                    android:layout_width="200dp"
                    android:layout_height="32dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="20dp"
                    android:textSize="12sp"
                    android:textColor="#CFCFCF"
                    android:textColorHint="#CFCFCF"
                    android:maxLength="50"
                    android:background="@drawable/input_background"
                    android:textCursorDrawable="@null"
                    android:cursorVisible="true"
                    android:hint="@string/inputContactEmailHint"
                    android:layout_toRightOf="@id/text_email"/>
                <EditText
                    android:id="@+id/edit_email2"
                    android:layout_width="200dp"
                    android:layout_height="32dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="20dp"
                    android:textSize="12sp"
                    android:textColor="#CFCFCF"
                    android:textColorHint="#CFCFCF"
                    android:maxLength="50"
                    android:background="@drawable/input_background"
                    android:textCursorDrawable="@null"
                    android:cursorVisible="true"
                    android:hint="@string/inputContactEmailHint"
                    android:layout_below="@id/edit_email1"
                    android:layout_alignRight="@id/edit_email1"/>
                <EditText
                    android:id="@+id/edit_email3"
                    android:layout_width="200dp"
                    android:layout_height="32dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="20dp"
                    android:textSize="12sp"
                    android:textColor="#CFCFCF"
                    android:textColorHint="#CFCFCF"
                    android:maxLength="50"
                    android:background="@drawable/input_background"
                    android:textCursorDrawable="@null"
                    android:cursorVisible="true"
                    android:hint="@string/inputContactEmailHint"
                    android:layout_below="@id/edit_email2"
                    android:layout_alignRight="@id/edit_email1"/>
                <LinearLayout
                    android:layout_below="@id/edit_email3"
                    android:orientation="horizontal"
                    android:id="@+id/line4"
                    android:layout_width="330dp"
                    android:layout_height="1dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="16dp"
                    android:background="#F0F0F0">
                </LinearLayout>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/url"
                android:layout_below="@id/email"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/text_url"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="10sp"
                    android:text="@string/contactUrl"
                    android:textColor="@color/black"
                    android:layout_marginTop="12dp"
                    android:layout_marginLeft="35dp"/>
                <EditText
                    android:id="@+id/edit_url"
                    android:layout_width="200dp"
                    android:layout_height="32dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="30dp"
                    android:textSize="12sp"
                    android:textColor="#CFCFCF"
                    android:textColorHint="#CFCFCF"
                    android:maxLength="50"
                    android:background="@drawable/input_background"
                    android:textCursorDrawable="@null"
                    android:cursorVisible="true"
                    android:hint="@string/inputContactUrlHint"
                    android:layout_toRightOf="@id/text_url"/>
                <LinearLayout
                    android:layout_below="@id/edit_url"
                    android:orientation="horizontal"
                    android:id="@+id/line5"
                    android:layout_width="330dp"
                    android:layout_height="1dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="16dp"
                    android:background="#F0F0F0">
                </LinearLayout>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/address"
                android:layout_below="@id/url"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/text_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="10sp"
                    android:text="@string/contactAddress"
                    android:textColor="@color/black"
                    android:layout_marginTop="12dp"
                    android:layout_marginLeft="35dp"/>
                <EditText
                    android:id="@+id/edit_address"
                    android:layout_width="200dp"
                    android:layout_height="32dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="30dp"
                    android:textSize="12sp"
                    android:textColor="#CFCFCF"
                    android:textColorHint="#CFCFCF"
                    android:maxLength="30"
                    android:background="@drawable/input_background"
                    android:textCursorDrawable="@null"
                    android:cursorVisible="true"
                    android:hint="@string/inputContactAddressHint"
                    android:layout_toRightOf="@id/text_address"/>
                <LinearLayout
                    android:layout_below="@id/edit_address"
                    android:orientation="horizontal"
                    android:id="@+id/line6"
                    android:layout_width="330dp"
                    android:layout_height="1dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="16dp"
                    android:background="#F0F0F0">
                </LinearLayout>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/note"
                android:layout_below="@id/address"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/text_note"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="10sp"
                    android:text="@string/contactNote"
                    android:textColor="@color/black"
                    android:layout_marginTop="12dp"
                    android:layout_marginLeft="35dp"/>
                <EditText
                    android:id="@+id/edit_note"
                    android:layout_width="200dp"
                    android:layout_height="32dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="30dp"
                    android:textSize="12sp"
                    android:textColor="#CFCFCF"
                    android:textColorHint="#CFCFCF"
                    android:maxLength="18"
                    android:background="@drawable/input_background"
                    android:textCursorDrawable="@null"
                    android:cursorVisible="true"
                    android:hint="@string/inputContactNumHint"
                    android:layout_toRightOf="@id/text_note"/>
            </RelativeLayout>
        </RelativeLayout>
    </ScrollView>




</RelativeLayout>